<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/playerLayout"
    android:baselineAligned="false"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/teamHeadShot"
        android:layout_gravity="center_horizontal"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="headshot"
        android:src="@mipmap/ic_launcher"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="4dp"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:weightSum="4">

        <TextView
            style="@style/TextAppearance.AppTheme.16.Medium"
            android:id="@+id/teamShortName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            style="@style/TextAppearance.AppTheme.16.Medium"
            android:id="@+id/teamJumperNumber"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            style="@style/TextAppearance.AppTheme.16.Medium"
            android:id="@+id/teamPosition"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            style="@style/TextAppearance.AppTheme.16.Medium"
            android:id="@+id/teamStatValue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
